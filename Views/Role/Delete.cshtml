@model EmailDemo.ViewModels.RoleVM
@{
    ViewData["Title"] = "Delete Role";
}

<h1>Delete Role</h1>
<hr />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h3 class="text-danger" style="padding-top: 30px; padding-bottom: 10px;">
    Are you sure you want to delete this role?
</h3>

<div class="card shadow-sm mb-4" style="width: 520px;">
    <div class="card-body" style="font-size: 1.6em;">
        <dl class="row" style="margin: 0;">
            <dt class="col-sm-5">Role Name:</dt>
            <dd class="col-sm-7">@Html.DisplayFor(model => model.RoleName)</dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="RoleName" />
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

